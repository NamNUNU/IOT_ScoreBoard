<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="35dp"
    android:paddingLeft="45dp"
    android:paddingRight="45dp"
    android:orientation="vertical"
    android:background="@drawable/bg_score">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageButton
            android:id="@+id/btn_score"
            android:layout_width="590px"
            android:layout_height="160px"
            android:background="@drawable/form_button_confirm"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true" />

        <ImageButton
            android:id="@+id/btn_end"
            android:layout_width="590px"
            android:layout_height="160px"
            android:background="@drawable/form_button_end"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true" />


    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="30dp">

        <TextView
            android:id="@+id/home"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="HOME"
            android:textColor="@color/maincolor"
            android:gravity="center"
            android:textSize="15pt"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/away"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="AWAY"
            android:textSize="15pt"
            android:textStyle="bold"
            android:textColor="@color/maincolor"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:id="@+id/linearLayout1"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true">

                <TextView
                    android:id="@+id/score_txt1"
                    android:layout_width="@dimen/imgwidth"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:gravity="center"
                    android:textSize="@dimen/score_num"
                    android:textColor="@color/maincolor"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentStart="true" />

                <TextView
                    android:id="@+id/score_txt2"
                    android:layout_width="@dimen/imgwidth"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:gravity="center"
                    android:textSize="@dimen/score_num"
                    android:textColor="@color/maincolor"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentStart="true" />

                <TextView
                    android:id="@+id/txt1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:text="0"
                    android:textSize="30pt"
                    android:textColor="@color/maincolor"
                    android:layout_alignBottom="@+id/linearLayout1"
                    android:layout_toEndOf="@+id/linearLayout1" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:id="@+id/linearLayout2"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true">

                <TextView
                    android:id="@+id/txt2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="10dp"
                    android:text="0"
                    android:textSize="30pt"
                    android:textColor="@color/maincolor"
                    android:layout_alignBottom="@+id/linearLayout2"
                    android:layout_toStartOf="@+id/linearLayout2" />

                <TextView
                    android:id="@+id/score_txt3"
                    android:layout_width="@dimen/imgwidth"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="0"
                    android:textSize="@dimen/score_num"
                    android:textColor="@color/maincolor"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentStart="true" />
                <TextView
                    android:id="@+id/score_txt4"
                    android:layout_width="@dimen/imgwidth"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="0"
                    android:textSize="@dimen/score_num"
                    android:textColor="@color/maincolor"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentStart="true" />

            </LinearLayout>



        </RelativeLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/btnheight"
            android:paddingLeft="20dp"
            android:paddingRight="20dp">

            <Button
                android:id="@+id/btn1up"
                android:layout_width="@dimen/btnwidth"
                android:layout_height="@dimen/btnheight"
                android:background="@drawable/form_button_count"
                android:text="+2"
                android:textSize="@dimen/setting_num"/>
            <Button
                android:id="@+id/btn2up"
                android:layout_width="@dimen/btnwidth"
                android:layout_height="@dimen/btnheight"
                android:layout_marginLeft="10dp"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@id/btn1up"
                android:background="@drawable/form_button_count"
                android:text="+3"
                android:textSize="@dimen/setting_num"/>

            <ImageButton
                android:id="@+id/btn_undo"
                android:layout_width="485px"
                android:layout_height="160px"
                android:layout_marginTop="5dp"
                android:background="@drawable/form_button_cancel"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"/>

            <Button
                android:id="@+id/btn3up"
                android:layout_width="@dimen/btnwidth"
                android:layout_height="@dimen/btnheight"
                android:text="+2"
                android:textSize="@dimen/setting_num"
                android:background="@drawable/form_button_count"
                android:layout_alignParentTop="true"
                android:layout_toStartOf="@+id/btn4up" />
            <Button
                android:id="@+id/btn4up"
                android:layout_width="@dimen/btnwidth"
                android:layout_height="@dimen/btnheight"
                android:layout_marginLeft="10dp"
                android:text="+3"
                android:textSize="@dimen/setting_num"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:background="@drawable/form_button_count"/>

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>
