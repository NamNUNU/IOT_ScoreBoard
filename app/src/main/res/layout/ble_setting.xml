<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg5"
    android:padding="@dimen/activity_vertical_margin">


    <TextView
        android:id="@+id/setting"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="설  정"
        android:gravity="center"
        android:paddingTop="40dp"
        android:paddingBottom="50dp"
        android:textSize="30pt"
        android:textColor="@color/melt_yellow"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/setting_gap">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txt_mode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="모   드"
                android:textSize="@dimen/setting_txt"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true" >

                <TextView
                    android:id="@+id/mode_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="스코어"
                    android:textColor="@color/red"
                    android:textSize="@dimen/setting_txt"/>

            </LinearLayout>


        </RelativeLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:paddingBottom="@dimen/setting_gap">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txt_round"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="라운드"
                android:textSize="@dimen/setting_txt"/>

            <Button
                android:id="@+id/round_down"
                android:layout_width="@dimen/dlgwidth"
                android:layout_height="@dimen/dlgheight"
                android:text="-"
                android:layout_alignParentTop="true"
                android:layout_toStartOf="@+id/round_up" />
            <TextView
                android:id="@+id/value_round"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:gravity="center"
                android:ems="2"
                android:layout_gravity="center_horizontal"
                android:text="4"
                android:textSize="@dimen/setting_num"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true" />
            <Button
                android:id="@+id/round_up"
                android:layout_width="@dimen/dlgwidth"
                android:layout_height="@dimen/dlgheight"
                android:text="+"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true" />

        </RelativeLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:paddingBottom="@dimen/setting_gap">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txt_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="스코어"
                android:textSize="@dimen/setting_txt"/>

            <Button
                android:id="@+id/score_down"
                android:layout_width="@dimen/dlgwidth"
                android:layout_height="@dimen/dlgheight"
                android:text="-"
                android:layout_alignParentTop="true"
                android:layout_toStartOf="@+id/score_up" />
            <TextView
                android:id="@+id/value_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:gravity="center"
                android:ems="2"
                android:layout_gravity="center_horizontal"
                android:text="20"
                android:textSize="@dimen/setting_num"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true" />
            <Button
                android:id="@+id/score_up"
                android:layout_width="@dimen/dlgwidth"
                android:layout_height="@dimen/dlgheight"
                android:text="+"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true" />

        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:paddingBottom="@dimen/setting_gap">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txt_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="시  간"
                android:textSize="@dimen/setting_txt"
                android:enabled="false"/>

            <Button
                android:id="@+id/min_down"
                android:layout_width="@dimen/dlgwidth"
                android:layout_height="@dimen/dlgheight"
                android:text="-"
                android:enabled="false"
                android:layout_alignParentTop="true"
                android:layout_toStartOf="@+id/min_up" />
            <TextView
                android:id="@+id/value_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:gravity="center"
                android:ems="2"
                android:layout_gravity="center_horizontal"
                android:text="5"
                android:textSize="@dimen/setting_num"
                android:enabled="false"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true" />
            <Button
                android:id="@+id/min_up"
                android:layout_width="@dimen/dlgwidth"
                android:layout_height="@dimen/dlgheight"
                android:text="+"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:enabled="false" />

        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="20dp"
        android:gravity="center_horizontal">


        <TextView
            android:id="@+id/confirm_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="준  비!"
            android:textSize="@dimen/setting_txt"
            android:textColor="@color/melt_green"/>
    </LinearLayout>

</LinearLayout>