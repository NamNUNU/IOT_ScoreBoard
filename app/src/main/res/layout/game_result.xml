<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="138dp"
    android:paddingLeft="210dp"
    android:background="@drawable/bg_result">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="15dp">

        <TextView
            android:id="@+id/H_score1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="-"
            android:textSize="@dimen/result_txt"
            android:textColor="@color/maincolor"/>
        <TextView
            android:id="@+id/H_score2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="-"
            android:textSize="@dimen/result_txt"
            android:textColor="@color/maincolor"/>
        <TextView
            android:id="@+id/H_score3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="-"
            android:textSize="@dimen/result_txt"
            android:textColor="@color/maincolor"/>
        <TextView
            android:id="@+id/H_score4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="-"
            android:textSize="@dimen/result_txt"
            android:textColor="@color/maincolor"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="45dp"
        android:paddingLeft="15dp">

        <TextView
            android:id="@+id/A_score1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="-"
            android:textSize="@dimen/result_txt"
            android:textColor="@color/maincolor"/>
        <TextView
            android:id="@+id/A_score2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="-"
            android:textSize="@dimen/result_txt"
            android:textColor="@color/maincolor"/>
        <TextView
            android:id="@+id/A_score3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="-"
            android:textSize="@dimen/result_txt"
            android:textColor="@color/maincolor"/>
        <TextView
            android:id="@+id/A_score4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="-"
            android:textSize="@dimen/result_txt"
            android:textColor="@color/maincolor"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="20dp"
        android:paddingRight="60dp"
        android:gravity="right">

        <ImageButton
            android:id="@+id/score_done"
            android:layout_width="362px"
            android:layout_height="137px"
            android:background="@drawable/form_button_back"/>


    </LinearLayout>

</LinearLayout>